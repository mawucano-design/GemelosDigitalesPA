# .env.example
# NASA POWER API Configuration
NASA_POWER_API_KEY=your_nasa_power_api_key_here

# Mapbox Configuration (opcional)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Application Settings
ENVIRONMENT=development  # development, testing, production
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration (opcional)
DATABASE_URL=postgresql://user:password@localhost:5432/agtech_db
REDIS_URL=redis://localhost:6379/0

# File Storage
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.zip,.kml,.geojson,.shp

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
USE_REDIS_CACHE=false

# Email Configuration (para reportes)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
SENTRY_DSN=your_sentry_dsn_here
